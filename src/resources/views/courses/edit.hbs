<div class="mt-4">
    <h3>Sửa info cầu thủ</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT" >
        <div class="form-group">
            <label for="UCL">Tên cầu thủ</label>
            <input type="text" class="form-control" value="{{course.UCL}}" id="UCL" name="UCL">
        </div>
        <div class="form-group">
            <label for="Laliga">Thành tích</label>
            <textarea class="form-control" id="Laliga" name="Laliga">{{course.Laliga}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Highlight</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Lưu thông tin</button>
    </form>
</div>